<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Scope__c</fullName>
    <description>Field as per ALR-859. This field is required for storing the observation data of scale of non-compliance.</description>
    <externalId>false</externalId>
    <inlineHelpText>The scale (or breadth) of non-compliance observed. Scope may be isolated (single), a pattern (multiple), or a widespread (extensive) observation of non-compliance.</inlineHelpText>
    <label>Scope</label>
    <required>false</required>
    <trackHistory>false</trackHistory>
    <type>Picklist</type>
    <valueSet>
        <restricted>true</restricted>
        <valueSetDefinition>
            <sorted>false</sorted>
            <value>
                <fullName>Isolated</fullName>
                <default>false</default>
                <label>Isolated</label>
            </value>
            <value>
                <fullName>Pattern</fullName>
                <default>false</default>
                <label>Pattern</label>
            </value>
            <value>
                <fullName>Widespread</fullName>
                <default>false</default>
                <label>Widespread</label>
            </value>
        </valueSetDefinition>
    </valueSet>
</CustomField>
